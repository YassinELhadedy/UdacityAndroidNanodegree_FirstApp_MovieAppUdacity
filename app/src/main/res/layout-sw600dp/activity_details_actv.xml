
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:layout_editor_absoluteY="25dp"
    tools:layout_editor_absoluteX="0dp">


    <ImageView
        android:id="@+id/detailPoster1"
        android:layout_width="138dp"
        android:layout_height="214dp"

        android:layout_marginLeft="-2dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="55dp"
        android:layout_marginStart="8dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"


        android:textColor="#2d2d2d"
        android:textSize="22dp"
        android:textStyle="bold"
        tools:layout_editor_absoluteY="60dp"
        tools:layout_editor_absoluteX="167dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"



        android:textColor="#7b7b7b"
        android:textSize="16dp"
        tools:layout_editor_absoluteY="112dp"
        tools:layout_editor_absoluteX="167dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"


        android:textColor="#a1a1a1"
        android:textSize="16dp"
        tools:layout_editor_absoluteY="184dp"
        tools:layout_editor_absoluteX="167dp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/detail_overview"
        android:textColor="@android:color/black"
        android:textSize="18dp"

        tools:layout_editor_absoluteX="263dp"
        android:layout_marginTop="25dp"
        app:layout_constraintTop_toBottomOf="@+id/detailPoster1" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="75dp"
        android:layout_height="25dp"

        android:textColor="@android:color/black"
        android:textSize="18dp"
        android:text="Trailer"
        tools:layout_editor_absoluteX="263dp"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@+id/OvrecyclerView" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/OvrecyclerView"
        android:layout_width="310dp"
        android:layout_height="210dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="101dp"
        app:layout_constraintHorizontal_bias="0.03"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <ImageView
        android:id="@+id/favorite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="34dp"
        android:layout_marginTop="112dp"
        app:layout_constraintLeft_toRightOf="@+id/detailPoster1"
        app:layout_constraintTop_toTopOf="parent"
        android:tint="@android:color/black"
        />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/date_calendar"
        app:layout_constraintLeft_toRightOf="@+id/detailPoster1"
        android:layout_marginLeft="34dp"
        android:tint="@android:color/black"
        app:layout_constraintTop_toTopOf="@+id/detailPoster1"
        android:layout_marginTop="0dp" />

    <TextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"

        app:layout_constraintLeft_toRightOf="@+id/imageView2"
        app:layout_constraintTop_toTopOf="@+id/imageView2" />

    <TextView
        android:id="@+id/overview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="304dp"
        android:layout_marginTop="13dp"
        app:layout_constraintRight_toRightOf="@+id/textView6"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/detail_trailers"
        android:layout_width="302dp"
        android:layout_height="298dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7"
        app:layout_constraintVertical_bias="0.0"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/OvrecyclerView" />


</android.support.constraint.ConstraintLayout>
